---
import "../main.css";
import Head from "../components/Head.astro";
import Body from "../components/Body.astro";

interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head>
        <title>{title}</title>
        <meta property="og:title" content={title} />

        <meta name="theme-color" content={"#0f172a"} data-react-helmet="true" />
    </Head>
    <Body>
        <slot />
    </Body>
</html>
